@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h2> All Roles</h2>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="admin" asp-action="createrole">
        Add new role
    </a>

    foreach (var roles in Model)
    {
        <section id="main">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="card">
                            <div class="card-header">
                                Role Id : @roles.Id
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@roles.Name</h5> 
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" style="width:auto" asp-controller="admin" asp-action="editrole" asp-route-id="@roles.Id">
                                Edit</a>
                                <a class="btn btn-danger" style="width:auto">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
    }

}
else
{
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="card">
                        <div class="card-header">
                            No role(s) created
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Create a role below
                            </h5>
                            <a class="btn btn-primary" style="width:auto" asp-controller="admin" asp-action="createrole">
                                Create Role
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}